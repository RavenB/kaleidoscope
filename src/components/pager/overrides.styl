.pager
  li
    > a,
    > span
      color: $pager-color
      background-color: $pager-bg
      border: none

      &:hover
        background-color: $pager-hover-bg

    &.disabled
      > a,
      > a:hover,
      > a:focus,
      > span
        color: $pager-disabled-color
        background-color: $pager-disabled-bg



  .previous,
  .next
    > a,
    > span
      position: relative
      transition: background-color .2s ease

      &:after
        position: absolute
        top:    0
        width:  0
        height: 0
        content: ''
        border-top:    15px solid transparent
        border-bottom: 15px solid transparent
        background-color: transparent !important


  .previous
    > a
    > span
      margin-left:  1em
      border-radius: 0 $pager-pointed-border-radius $pager-pointed-border-radius 0

      &:after
        left: -11px
        border-right-color: $pager-bg
        border-right-style: solid
        border-right-width: 11px
        transition: border-right-color .2s

      &:hover:after
        border-right-color: $pager-hover-bg

    &.disabled
      > a,
      > a:hover,
      > a:focus,
      > span
        &:after
          border-right-color: $pager-disabled-bg


  .next
    > a,
    > span
      margin-right:  1em
      border-radius: $pager-pointed-border-radius 0 0 $pager-pointed-border-radius

      &:after
        right: -11px
        border-left-color: $pager-bg
        border-left-style: solid
        border-left-width: 11px
        transition: border-left-color .2s

      &:hover:after
        border-left-color: $pager-hover-bg

    &.disabled
      > a,
      > a:hover,
      > a:focus,
      > span
        &:after
          border-left-color: $pager-disabled-bg
