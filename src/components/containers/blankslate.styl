.blankslate
  position:   relative
  padding:    $blankslate-padding
  text-align: center

  color:            $blankslate-color
  background-color: $blankslate-bg
  border: 1px solid $blankslate-border-color
  border-radius: 3px

  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05)


  code
    padding: 2px 5px 3px
    font-size: 14px
    background: #fff
    border: 1px solid #eee
    border-radius: 3px

  > .icon
    color: $blankslate-icon-color

  .icon + .icon
    margin-left: 10px



  &.clean-background
    background: none
    border: 0
    box-shadow: none


  &.capped
    border-radius: 0 0 3px 3px


  &.spacious
    padding: $blankslate-spacious-padding


  &.has-fixed-width
    width: 485px
    margin: 0 auto


  &.large-format
    h3
      margin: 0.75em 0
      font-size: 20px
    p
      font-size: 16px

    .icon
      font-size: 40px
