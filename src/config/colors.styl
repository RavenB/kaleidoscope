// Colors
// ---------------------------------------------------------------------
// Gray and brand colors for use across Bootstrap.

$gray-base         ?= #000
$gray-darker       ?= lighten($gray-base, 13.5%) // #222
$gray-dark         ?= lighten($gray-base, 20%)   // #333
$gray              ?= lighten($gray-base, 33.5%) // #555
$gray-light        ?= lighten($gray-base, 46.7%) // #777
$gray-lighter      ?= lighten($gray-base, 93.5%) // #eee
$gray-toned        ?= #aab2bd

$brand-primary     ?= #30b5e5
$brand-success     ?= #8CC152
$brand-info        ?= #75CAEB
$brand-warning     ?= #FF851B
$brand-danger      ?= #FF4136

$color-blue        ?= #5D9CEC
$color-aqua        ?= #4FC1E9
$color-mint        ?= #48CFAD
$color-grass       ?= #A0D468
$color-sunflower   ?= #FFCE54
$color-bittersweet ?= #FC6E51
$color-grapefruit  ?= #ED5565
$color-lavender    ?= #AC92EC
$color-pink        ?= #EC87C0
