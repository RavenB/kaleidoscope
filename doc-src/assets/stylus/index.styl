@import 'bootstrap-docs'


// Header
// ---------------------------------------------------------------------
#theme-header
  position: relative
  height: 50px;
  padding: 0 0 0 20px
  margin-bottom: 10px
  overflow: auto
  background-color: #434A54
  background-image: url(../images/unsplash/header.jpg)
  background-position: center center
  background-size: cover

  h1
    display: block
    width:  133px
    height: 40px
    padding: 0
    margin:  5px 0
    float: left

    a
      display: block
      width:  100%
      height: 100%
      overflow: hidden
      text-indent: -99em
      background-image: url(../images/logos/logo133x40.png)


  nav
    float: right

    &, ul, li, a
      height: 100%

    ul
      margin: 0
      padding: 0
      overflow: auto
      list-style: none

    li
      float: left

    a
      display: block
      padding: 0 2em
      line-height: 50px
      font-family: 'Armata',sans-serif;
      font-weight: bold;
      color: #fff
      background: rgba(255,255,255,.2)
      text-shadow: 1px 1px 2px rgba(0,0,0,0.2)
      border-left: solid 1px rgba(255,255,255,.3)
      transition: background 500ms

      &:hover
        background: rgba(255,255,255,.3)

      &.active
        background: rgba(255,255,255,.4)




body.home #theme-header
  height: 400px

  h1
    width:  300px
    height: 91px
    margin: 100px auto 0
    float: none

    a
      background-image: url(../images/logos/logo300x91.png)

  nav
    height: 50px
    border-top: solid 1px rgba(255,255,255,.3)
    position: absolute
    right:  0
    bottom: 0




