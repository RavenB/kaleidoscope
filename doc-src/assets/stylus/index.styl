// Color swatches
// ---------------------------------------------------------------------
.color-swatches
  .swatches
    border-radius: 4px
    background-color: #FFF
    width: 100%
    box-shadow: 0 1px 2px rgba(0, 0, 0, .2)

  .light, .dark
    width: 50%
    height: 50px

  .light
    border-radius: 4px 0 0 0

  .dark
    border-radius: 0 4px 0 0

  .infos
    padding: 5px 10px

    h4, p
      margin: 0

    h4
      margin-bottom: 3px
      font-weight: bold
      font-size: 14px

    p
      font-size: 12px





// Misc
// ---------------------------------------------------------------------

.example
  padding: 10px 0
  border-bottom: dashed 1px #ccc

  h2
    margin-bottom: 20px

body.home .example [class*=col-]
  margin-bottom: 10px


.blank
  display: none


.test-block
  position: relative
  padding: 1em
  background-color: #f7f7f7
  border: 1px solid #e5e5e5
  border-radius: 3px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.05)

.example-dropdown h2+.dropdown-menu,
.example-modal .modal,
.example-popover .popover
  display: block
  position: relative

.spaced-rows .row
  margin-bottom: 10px



// Selectize example
// ---------------------------------------------------------------------
.selectize-example-email
  margin-left: 5px
  font-style: italic

  &:before
    content: '<'
  &:after
    content: '>'

.selectize-example-caption
  font-size: 12px
  display: block
  opacity: 0.5
